<?xml version="1.0" encoding="utf-8"?>
<!--
    File: res/drawable/ic_launcher_monochrome.xml
    This drawable is used for Themed Icons on Android 13+.
    It contains a single-color version of the icon's foreground.
    The system will dynamically tint this drawable to match the user's theme.
-->
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!-- The entire group is shifted to be centered in the 108x108 viewport. -->
    <group
        android:name="icon_group"
        android:translateX="22"
        android:translateY="22">

        <!--
            Group for the scanner waves.
            The stroke color is set to a single value, and the alpha attributes
            are retained to create the fading effect when tinted by the system.
        -->
        <group android:name="scanner_waves">
            <path
                android:name="wave_1"
                android:pathData="M 16,32 a 16,16 0 1,0 32,0 a 16,16 0 1,0 -32,0"
                android:strokeColor="@android:color/white"
                android:strokeWidth="1.5"
                android:strokeAlpha="0.3" />
            <path
                android:name="wave_2"
                android:pathData="M 10,32 a 22,22 0 1,0 44,0 a 22,22 0 1,0 -44,0"
                android:strokeColor="@android:color/white"
                android:strokeWidth="1.5"
                android:strokeAlpha="0.2" />
            <path
                android:name="wave_3"
                android:pathData="M 4,32 a 28,28 0 1,0 56,0 a 28,28 0 1,0 -56,0"
                android:strokeColor="@android:color/white"
                android:strokeWidth="1.5"
                android:strokeAlpha="0.1" />
        </group>

        <!--
            Core Bluetooth Symbol.
            This is a solid, opaque shape that will be fully tinted.
        -->
        <path
            android:name="bluetooth_symbol"
            android:pathData="M30.5 19 L40 28.5 L34 34.5 L34 19 L40 25 L30.5 34.5 M30.5 45 L34 41.5 L34 29.5"
            android:strokeColor="@android:color/white"
            android:strokeWidth="4"
            android:strokeLineCap="round"
            android:strokeLineJoin="round" />
    </group>
</vector>
